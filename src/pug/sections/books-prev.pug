mixin book-prev(img, title, subtitle)
  a(href="/").book-prev
    .book-prev__img
      img(src="assets/img/book-" + img + ".jpg", alt="img")
    .book-prev__info
      .book-prev__date
        img(src="assets/img/icons/calendar.svg", alt="icon")
        span.body-2 20.02.2024
      h5.h5= title
      h6.h6.text-grey= subtitle
      .body-2.text-grey Herausgeber:
      .h7 Adrian Holderegger
      .h7 Gerhard Schwarz
      .h7 Beat Sitter-Liver
      .h7 Brigitte Tag


