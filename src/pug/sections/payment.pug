mixin payment-filter__item-active(plan, price)
  .payment-filter__item
    input(type="radio" name='payment-filter' checked)
    .payment-filter__item-btn
      .payment-filter__item-btn-icon
      .payment-filter__item-btn-info
        span.h6= plan
        .payment-filter__item-btn-price
          span.h5= price
          span.h7 Chf

mixin payment-filter__item(plan, price)
  .payment-filter__item
    input(type="radio" name='payment-filter')
    .payment-filter__item-btn
      .payment-filter__item-btn-icon
      .payment-filter__item-btn-info
        span.h6= plan
        .payment-filter__item-btn-price
          span.h5= price
          span.h7 Chf

mixin input-mix-error(label, placeholder)
  .input.error
    .input__placeholder= label
    input(type="text" placeholder= placeholder)

mixin input-mix(label, placeholder)
  .input
    .input__placeholder= label
    input(type="text" placeholder= placeholder)

mixin textarea-mix(label, placeholder)
  .textarea
    .textarea__placeholder= label
    textarea(placeholder= placeholder)

