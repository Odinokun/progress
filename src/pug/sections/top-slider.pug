      .top-slide__content-top
        h6.top-slide__text.h6= text
        h5.top-slide__title.h5= title
        .event__footer
          .event__footer-item
            .event__footer-icon
              +svg('calendar')
            span 20.04.2023
          .event__footer-item
            .event__footer-icon
              +svg('geo')
